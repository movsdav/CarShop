@model CarShop.Models.Product.CarModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>CarModel</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            @Html.HiddenFor(model => model.AppUserId)
            @Html.HiddenFor(model => model.ImgFileName)
            @Html.HiddenFor(model => model.ImgUrl)
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CarBrandId" class="control-label"></label>
                <select asp-for="CarBrandId" class="form-control" asp-items="ViewBag.CarBrandId"></select>
                <span asp-validation-for="CarBrandId" class="text-danger"></span>
            </div>
            <dl class="row">
                <dt class="col-sm-2">
                    <p>Image</p>
                </dt>
                <dd class="col-sm-10">
                    <div class="w-25 h-25">
                        <img src="@Model.ImgUrl" class="img-thumbnail">
                    </div>
                </dd>
            </dl>
            <div class="form-group">
                <label asp-for="ImgFile" class="control-label"></label>
                <input asp-for="ImgFile" class="form-control" type="file"/>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
