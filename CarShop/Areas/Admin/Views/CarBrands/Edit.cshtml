@model CarShop.Models.Product.CarBrand

@{
    ViewData["Title"] = "Edit";

}

<h1>Edit</h1>

<h4>CarBrand</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <input type="hidden" asp-for="ImgUrl" />
            <input type="hidden" asp-for="ImgFileName" />
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <dl class="row">
                <dt class="col-sm-2">
                    <p>Image</p>
                </dt>
                <dd class="col-sm-10">
                    <div class="w-25 h-25">
                        <img src="@Model.ImgUrl" class="img-thumbnail">
                    </div>
                </dd>
            </dl>
            <div class="form-group">
                <label asp-for="ImgFile" class="control-label"></label>
                <input asp-for="ImgFile" class="form-control" type="file" />
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
